{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "composite": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "baseUrl": ".",
    "paths": {
      "@rotorsoft/*": [
        "libs/*/src/index.ts"
      ],
      "@act/*": [
        "packages/*/src/index.ts"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
  ]
}