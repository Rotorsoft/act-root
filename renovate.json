{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "groupName": "all dependencies"
    }
  ],
  "enabledManagers": ["pnpm", "github-actions"],
  "platform": "github",
  "labels": ["dependencies"],
  "dependencyDashboard": true
}
