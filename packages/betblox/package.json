{
  "name": "betblox",
  "version": "0.1.0",
  "private": true,
  "description": "BetBlox: A blockchain-based prediction market for event-based polls, using Act Framework for projections.",
  "scripts": {
    "dev": "pnpm --filter ./src/ui dev",
    "dev:backend": "npx ts-node src/backend/server.ts",
    "dev:all": "npx concurrently -n 'backend,ui' -c 'cyan,magenta' 'pnpm --filter betblox dev:backend' 'pnpm --filter betblox dev'",
    "db:up": "docker compose -f ../../packages/betblox/docker-compose.local.yml up -d",
    "db:down": "docker compose -f ../../packages/betblox/docker-compose.local.yml down",
    "db:env": "node scripts/create-env.js",
    "db:migrate": "drizzle-kit migrate",
    "drizzle:generate": "drizzle-kit generate"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.80.7",
    "@trpc/client": "11.4.2",
    "@trpc/react-query": "11.4.2",
    "@trpc/server": "11.4.2",
    "ajv": "^8.17.1",
    "drizzle-orm": "^0.44.2",
    "fastify": "^5.2.0",
    "pg": "^8.16.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.67",
    "@rotorsoft/act": "workspace:*"
  },
  "devDependencies": {
    "@types/pg": "^8.15.4",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.31.1",
    "ts-node": "^10.9.1"
  }
}
