{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ES2022",
    "target": "ESNext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@rotorsoft/*": [
        "*/src"
      ]
    },
    "types": [
      "vitest/globals"
    ]
  },
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}