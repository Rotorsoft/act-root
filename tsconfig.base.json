{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rotorsoft/*": [
        "libs/*/src"
      ],
    }
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/*.spec.ts"
  ]
}